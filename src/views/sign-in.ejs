                        <div class="ps-section__wrapper">
                            <div class="ps-section__left">
                                <div class="d-flex justify-content-center mb-5">
                                    <h1>Sign In</h1>
                                </div>

                                <div id="alertShow" class="my-3 text-center"></div>
                                <form class="ps-form--account ps-tab-root" id="signInForm">
                                    <div class="ps-form__content">
                                        <h5>Sign In with your account</h5>
                                        <div class="form-group">
                                            <label for="email" class="mb-2">Email</label>
                                            <input class="form-control" type="text" value="jensysantana@gmail.co" name="email" id="email">
                                            <p class="form-group-input-error"></p>
                                        </div>
                                        <div class="form-group">
                                            <label for="password" class="mb-3">Password</label>
                                            <div class="form-group form-forgot mb-0">
                                                <input class="form-control" type="password" value="Jashly326" name="password" id="password">
